.header
	font-family 'Montserrat'
	background-color $black
	color $white
	height 64px
	position fixed
	top 0
	left 0
	width 100%
	z-index 10
	transition all 0.3s ease-out
	
	&-mobile
		display flex
		justify-content space-between
		align-items center
		flex-direction row
		height 100%
	
	&-logo
		order 1
		margin-left 1rem
		
	&-btn-nav
		order 2
		border 0
		border-radius 5px
		background-color rgba($black, 0)
		margin-right 1em
	
	&--light
		background-color rgba($white, .9)
		color $black
		.header-menu-navbar
			background-color rgba($white, .95)
			a
				color $black
	
	&-menu-navbar
		background-color $black
		
	
	&-menu-list
		list-style-type none
		height 0
		overflow hidden
		transition height 0.3s ease-out
	
		&--show
			height 280px
		
		&-item
			
			a
				display block
				text-decoration none
				color $white
				padding 1.5rem
				width 100%
	
@media (min-width: 768px)
	.header
		display flex
		flex-direction row
		flex-wrap wrap
		justify-content space-between
		align-items center
		height 80px
		
		&-logo
			margin-left 1.5rem

		&-btn-nav
			display none
		// &-mobile
		&-menu-list
			height 100%
			
			&-item
				display inline-block